[flake8]
max-line-length = 100
# If you use Black, you should always ignore E203.
# ./problem_8_largest_product_in_a_series.py:197:26: E203 whitespace before ':'
# Ignore W504 if you use Black.
# W504 line break after binary operator
ignore = E203, W504
exclude =
    .git,
    __pycache__,
    old,
    build,
    dist,
    .build
